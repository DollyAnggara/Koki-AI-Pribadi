<section class="konten">
  <div class="kartu">
    <h2 class="kartu-judul">{{#if (eq mode 'new')}}Tambah Resep{{else}}Edit Resep{{/if}}</h2>
    {{#if error}}<div class="peringatan">{{error}}</div>{{/if}}

    <form method="POST" action="{{#if (eq mode 'new')}}/admin/resep{{else}}/admin/resep/{{resep._id}}{{/if}}">
      <label>Nama Resep</label>
      <input name="namaResep" value="{{resep.namaResep}}" required />

      <label>Porsi</label>
      <input name="porsi" type="number" min="1" value="{{resep.porsi}}" required />

      <label>Daftar Bahan (JSON)</label>
      <textarea name="daftarBahan" rows="6">{{#if resep.daftarBahan}}{{{json resep.daftarBahan}}}{{/if}}</textarea>

      <label>Langkah / Instruksi</label>
      <textarea name="instruksi" rows="6">{{resep.instruksi}}</textarea>

      <label>Gambar (URL)</label>
      <input name="gambar" value="{{resep.gambar}}" />

      <div style="margin-top:12px;">
        <button class="tombol-kirim" type="submit">{{#if (eq mode 'new')}}Buat Resep{{else}}Simpan Perubahan{{/if}}</button>
        <a href="/admin/resep" class="tombol">Batal</a>
      </div>
    </form>
  </div>
</section>