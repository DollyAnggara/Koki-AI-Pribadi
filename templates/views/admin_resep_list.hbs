<section class="konten">
  <div class="kartu">
    <h2 class="kartu-judul">Admin â€” Daftar Resep</h2>
    {{#if error}}<div class="peringatan">{{error}}</div>{{/if}}
    <div style="margin:10px 0 18px 0;display:flex;align-items:center;gap:10px;">
      <a href="/admin/resep/new" class="tombol-kirim">+ Tambah Resep Baru</a>
      <div>
        <a href="/admin/resep" class="tombol">Semua</a>
        <a href="/admin/resep?filter=pending" class="tombol">Pending</a>
        <a href="/admin/resep?filter=approved" class="tombol">Diizinkan</a>
      </div>
    </div>
    <table class="tabel" style="width:100%">
      <thead>
        <tr><th>Nama</th><th>Porsi</th><th>Status</th><th>Submitted By</th><th>Actions</th></tr>
      </thead>
      <tbody>
        {{#each resep}}
          <tr>
            <td>{{this.namaResep}}</td>
            <td style="width:80px">{{this.porsi}}</td>
            <td style="width:140px">{{this.status}}{{#if this.moderationNote}}<div style="font-size:0.85em;color:#666">{{this.moderationNote}}</div>{{/if}}</td>
            <td style="width:200px">{{#if this.submittedBy}}{{this.submittedBy.namaPengguna}} {{#if this.submittedBy.email}}({{this.submittedBy.email}}){{/if}}{{else}}-{{/if}}</td>
            <td style="width:320px">
              <a class="tombol-kirim" href="/resep/{{this._id}}">Lihat</a>
              <a class="tombol" href="/admin/resep/{{this._id}}/edit">Edit</a>
              {{#if (eq this.status 'pending')}}
                <form method="POST" action="/admin/resep/{{this._id}}/approve" style="display:inline;">
                  <input type="hidden" name="note" value="" />
                  <button class="tombol" type="submit">Setujui</button>
                </form>
                <form method="POST" action="/admin/resep/{{this._id}}/reject" style="display:inline;margin-left:8px;" onsubmit="return requireNote(this)">
                  <input type="hidden" name="note" value="" />
                  <button class="tombol-bahaya" type="submit">Tolak</button>
                </form>
              {{/if}}
              <form method="POST" action="/admin/resep/{{this._id}}/delete" style="display:inline;" onsubmit="return confirm('Hapus resep ini?')">
                <button class="tombol-bahaya" type="submit">Hapus</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

<script>
function requireNote(form){
  var note = prompt('Masukkan catatan penolakan (opsional):');
  if (note === null) return false; // canceled
  form.querySelector('input[name=note]').value = note || '';
  return true;
}
</script>
  </div>
</section>