<main class="site-root">
  <section class="register-page">
    <div class="container">
      <div class="register-card">
        <div class="register-brand">
          <div class="brand-row">
            <img src="/img/logo-pngegg.png" alt="logo" class="login-logo" />
            <div class="brand-text">
              <h1>Koki AI Pribadi</h1>
              <div class="brand-sub">Asisten Memasak Cerdas</div>
            </div>
          </div>
          <h2>Daftar Akun</h2>
        </div>

        {{#if error}}
          <div class="alert alert-error">{{error}}</div>
        {{/if}}

        <form action="/api/pengguna/registrasi" method="post" class="register-form">
          <input name="namaPengguna" type="text" placeholder="Nama Pengguna" required class="form-control" />
          <input name="telepon" type="tel" placeholder="Nomor HP (opsional)" class="form-control" />
          <input name="email" type="email" placeholder="Email" required class="form-control" />
          <input name="namaLengkap" type="text" placeholder="Nama Lengkap" class="form-control" />

          <div class="input-with-icon">
            <input name="kataSandi" type="password" placeholder="Password" required class="form-control password-field" />
            <button type="button" class="btn-icon toggle-password" aria-label="Tampilkan password" title="Tampilkan password">
              <img src="/img/eye-closed.png" data-open="/img/eye-open.png" data-closed="/img/eye-closed.png" alt="toggle" />
            </button>
          </div>

          <div class="input-with-icon">
            <input id="passwordConfirm" name="kataSandiConfirm" type="password" placeholder="Konfirmasi Password" required class="form-control password-field" />
            <button type="button" class="btn-icon toggle-password" aria-label="Tampilkan password" title="Tampilkan password">
              <img src="/img/eye-closed.png" data-open="/img/eye-open.png" data-closed="/img/eye-closed.png" alt="toggle" />
            </button>
          </div>

          <div class="otp-row">
            <input name="otp" type="text" placeholder="Masukkan Kode OTP" class="form-control otp-input" />
            <button type="button" class="btn-secondary otp-btn">Kirim Kode OTP</button>
          </div>

          <div class="register-meta">
            <div class="signup-note">Sudah punya akun? <a href="/login">Login</a></div>
          </div>

          <div id="registerError" class="alert alert-error" style="display:none;"></div>

          <button class="btn-primary" type="submit">Buat Akun</button>
        </form>
      </div>
    </div>
  </section>
</main>