<section class="bagian admin-resep-pending">
  <div class="kartu">
    <div class="admin-top">
      <div>
        <h2 class="kartu-judul">Resep Pending</h2>
        <p class="muted">Tinjau resep yang dikirim pengguna. Tindakan tidak dapat dibatalkan.</p>
      </div>
      <div class="admin-top-actions">
        <a href="/admin/dashboard" class="tombol-kecil">Dashboard</a>
        <a href="/admin/resep" class="tombol-kecil">Kelola Resep</a>
      </div>
    </div>

    {{#if resep.length}}
      <div class="pending-grid">
        {{#each resep}}
          <article class="pending-card">
            <div class="card-head">
              <h3 class="card-judul">{{this.namaResep}}</h3>
              <div class="card-meta">
                <span class="badge kategori">{{this.kategoriLabel}}</span>
                <span class="muted small">{{this.submittedAt}}</span>
              </div>
            </div>

            {{#if this.deskripsi}}
              <div class="card-body muted">{{this.deskripsi}}</div>
            {{/if}}

            <div class="card-sub">Pengirim: {{#if this.submittedBy}}{{#if this.submittedBy.namaPengguna}}{{this.submittedBy.namaPengguna}}{{else}}{{this.submittedBy}}{{/if}}{{else}}-{{/if}}</div>

            <div class="card-actions">
              <button class="tombol-kirim tombol-approve" data-approve-id="{{this._id}}">Setujui</button>
              <button class="tombol-kecil tombol-bahaya" data-reject-id="{{this._id}}">Tolak</button>
            </div>
          </article>
        {{/each}}
      </div>
    {{else}}
      <div class="admin-empty">Tidak ada resep pending saat ini. Bagus!</div>
    {{/if}}
  </div>
</section>

<script src="/js/admin.js"></script>