<section class="bagian">
  <div class="kartu">
    <h2 class="kartu-judul">Tambah Resep Baru</h2>
    {{#if error}}<div class="peringatan">{{error}}</div>{{/if}}
    <form method="post" action="/admin/resep">
      <label>Nama Resep</label>
      <input name="namaResep" required />
      <label>Kategori</label>
      <input name="kategori" />
      <label>Porsi</label>
      <input name="porsi" type="number" value="1" min="1" />
      <label>Deskripsi</label>
      <textarea name="deskripsi"></textarea>
      <div style="margin-top:12px;"><button class="tombol-kirim">Simpan</button></div>
    </form>
  </div>
</section>